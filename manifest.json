{
    "manifest_version": 3,
    "name": "SEO Scout",
    "version": "0.1.0",
    "description": "Quick on-page SEO overview (no auto-fixes).",
    "action": { "default_title": "SEO Scout", "default_popup": "popup.html" },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "permissions": ["scripting", "storage", "activeTab", "tabs"],
    "host_permissions": ["<all_urls>"],
    "content_scripts": [{
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }]
  }